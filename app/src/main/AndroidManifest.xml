<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.capstone">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidCapstone">
        <activity
            android:name="com.android.capstone.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.android.capstone.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.android.capstone.LoginActivity"
            android:exported="true"/>

        <activity
            android:name="com.android.capstone.RegisterActivity"
            android:exported="false" />

        <activity
            android:name="com.android.capstone.MainActivity"
            android:exported="true" />

        <activity android:name="com.android.capstone.AboutUsActivity"
            android:exported="true"/>

        <activity android:name="com.android.capstone.DashboardActivity"
            android:exported="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>